# Dockerfile.dev - Development mode dengan TypeScript
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Install ts-node globally untuk development
RUN npm install -g ts-node nodemon

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Generate Prisma client
RUN npx prisma generate

# Expose port
EXPOSE 3000

# Start with ts-node for hot reload
CMD ["npm", "run", "dev"]
